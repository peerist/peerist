{
  "name": "peerist",
  "version": 2,
  "builds": [
    { "src": "www/package.json", "use": "@now/next" },
    { "src": "webhooks/*.go", "use": "@now/go" }
  ],
  "alias": ["peerist.org"],
  "routes": [
    {
      "src": "/webhooks/(.*)",
      "dest": "/webhooks/$1.go"
    },
    {
      "src": "/(.*)",
      "dest": "/www/$1",
      "headers": {
        "x-request-path": "$1"
      }
    }
  ]
}
